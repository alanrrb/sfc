= form_for @account do |f|
  -if @account.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@account.errors.count, "error")} prohibited this account from being saved:"
      %ul
        - @account.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :initial_balance
    = f.text_field :initial_balance
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :account_type
    = f.select :account_type, options_from_collection_for_select(AccountType.all,"id","name")
  .actions
    = f.submit 'Save'
